<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="h2">
        <environment id="h2">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <property name="url" value="jdbc:h2:./config/keira-ai/conversations;AUTO_SERVER=TRUE;DB_CLOSE_DELAY=-1"/>
                <property name="username" value="keira"/>
                <property name="password" value=""/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper class="com.keira.persistence.mapper.ConversationMapper"/>
        <mapper class="com.keira.persistence.mapper.LocationMapper"/>
        <mapper class="com.keira.persistence.mapper.ModAdminMapper"/>
        <mapper class="com.keira.persistence.mapper.PlayerProfileMapper"/>
        <mapper class="com.keira.persistence.mapper.PlayerConnectionMapper"/>
    </mappers>
</configuration>
